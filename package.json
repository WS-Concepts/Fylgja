{
  "name": "fylgja",
  "version": "2.0.0",
  "description": "The modular CSS framework. Powered via CSS components",
  "homepage": "https://fylgja.dev/",
  "repository": {
    "type": "git",
    "url": "https://github.com/fylgja/fylgja"
  },
  "bugs": "https://github.com/fylgja/fylgja/issues",
  "author": "Fylgja",
  "license": "MIT",
  "style": "fylgja.css",
  "sass": "index.scss",
  "unpkg": "fylgja.css",
  "keywords": [
    "fylgja",
    "css",
    "sass",
    "framework",
    "library",
    "metapackage"
  ],
  "scripts": {
    "build": "echo 'action here'"
  },
  "devDependencies": {
    "@fylgja/stylelint-config": "^7.0.0",
    "lightningcss-cli": "^1.26.0",
    "sass": "^1.77.8"
  },
  "stylelint": {
    "extends": "@fylgja/stylelint-config",
    "rules": {
      "rule-empty-line-before": null,
      "at-rule-empty-line-before": [
        "always",
        {
          "except": [
            "blockless-after-same-name-blockless",
            "first-nested"
          ],
          "ignore": [
            "after-comment"
          ],
          "ignoreAtRules": [
            "if",
            "else",
            "each",
            "for",
            "while"
          ]
        }
      ]
    }
  }
}
