{
  "name": "@fylgja/base",
  "version": "2.0.0",
  "description": "",
  "homepage": "https://fylgja.dev/",
  "author": "Fylgja",
  "license": "MIT",
  "main": "_index.scss",
  "unpkg": "base.css",
  "style": "base.css",
  "repository": {
    "type": "git",
    "url": "https://github.com/fylgja/fylgja",
    "directory": "base"
  },
  "bugs": "https://github.com/fylgja/fylgja/issues",
  "keywords": [],
  "scripts": {
    "start": "npx sass --no-source-map -w src:./",
    "build:scss": "npx sass --no-source-map src:./",
    "build:main": "npx lightningcss --minify --bundle index.css -o index.min.css",
    "build:preflight": "npx lightningcss --minify --bundle preflight.css -o preflight.min.css",
    "build:btn": "npx lightningcss --minify --bundle btn.css -o btn.min.css",
    "build:form": "npx lightningcss --minify --bundle form.css -o form.min.css",
    "build:dialog": "npx lightningcss --minify --bundle dialog.css -o dialog.min.css",
    "build:parts": "npm run build:btn && npm run build:form && npm run build:dialog",
    "build": "npm run build:main && npm run build:preflight && npm run build:parts",
    "prebuild": "npm run build:scss"
  }
}
